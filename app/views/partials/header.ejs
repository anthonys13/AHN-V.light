<!DOCTYPE html>
<html lang="en">

<head>
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>AHN</title>
  <link rel="shortcut icon" href="/images/AHN-Logo.png">
  <!-- CSS  -->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link href="/css/style.css" type="text/css" rel="stylesheet" media="screen,projection,print" />
  <link href="/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection,print" />
</head>

<body>
  <nav class="#424242 grey darken-3" role="navigation">
    <div class="nav-wrapper container">
      <ul class="right hide-on-med-and-down">
        <% if(locals.session.user) { %>
        <li><a href="/profil"><span class="blue-text name">Mon compte</span></a></li>
        <li><a href="/"><span class="blue-text name">Accueil</span></a></li>
        <li><a href="/logout" class="black-text">Se déconnecter</a></li>
        <% } else { %>
        <li><a href="/login">Se connecter</a></li>
        <li><a href="/register">S'inscrire</a></li>
        <li><a href="/"><span class="blue-text name">Accueil</span></a></li>
        <% } %>
      </ul>
      <% if(locals.session.user) { %>
      <ul id="nav-mobile" class="sidenav">
        <li>
          <div class="user-view">
            <div class="background">
            </div>
            <div class="col s2 img-profil">
              <img src="/images/<%=session.user[0].img%>" alt="profilpicture" class="z-depth-1 prof-img responsive-img">
            </div>
            <span class="black-text name">Bonjour <pan class="white-text"><%=session.user[0].nom%> <%=session.user[0].prenom%> </pan></span>
            <br>
          </div>
        </li>
        <% if(locals.session.user) { %>
        <li><a href="/profil"><span class="blue-text name">Mon compte</span></a></li>
        <li><a href="/"><span class="blue-text name">Accueil</span></a></li>
        <li><a href="/logout">Se déconnecter</a></li>
        <% } else { %>
        <li><a href="/login">Se connecter</a></li>
        <li><a href="/register">S'inscrire</a></li>
        <% } %>
        <div class="collection">
          <% if (session.user[0]["animals"].length) { %>
          <h6 class="center black-text">Mes animaux <a href="/addPage"><i class="blue-text tiny material-icons">add</i></a></h6>
          <% } else {%>
          <h6 class="center black-text">Mes animaux <a href="/addPage" class="btn-floating blue pulse"><i class="black-text tiny material-icons">add</i></a></h6>
          <% } %>
          <div class="divider"></div>
          <% for(const myAnimals of session.user[0].animals) { %>
          <a href="/carnet/<%=myAnimals.id%>" class="black-text collection-item"><%=myAnimals.nom%></a>
          <% } %>
        </div>
      </ul>
      <% } else { %>
      <% } %>
      <% if(locals.session.user) { %>
      <a href="#" data-target="nav-mobile" class="sidenav-trigger"><i class="blue-text material-icons">menu</i></a>
      <% } else { %>
      <% } %>
    </div>
  </nav>